    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "build": "tsc --noEmit",
        "test": "wdio run ./wdio.conf.ts",
        "dev": "tsx watch --watch='src/**/*.ts' src/server.ts",
        "start": "tsx src/server.ts",
        "clean": "rm -rf dist/*",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:run-migrations": "ts-node --esm ./src/db/migrate.ts",
        "db:remake": "rm -rf drizzle && rm -rf data/sqlite.db && pnpm run db:generate && pnpm run db:push && pnpm run db:run-migrations",
        "wdio": "wdio run ./wdio.conf.js",
        "tsc": "tsc",
        "generate-jwks": "tsx generateJwks.ts"
