<div class="row d-flex justify-content-center align-items-center h-100 w-100">
    <div class="col-12 col-md-9 col-lg-7 col-xl-6">

        <h1 class="text-uppercase justify-content-center mb-5">Lost Password</h1>
        <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
                <form class="form-signup form-server m-auto" autocomplete="off" action="/lost_password" method="post">
                    <p>
                        If you have lost your password, please confirm your email address and we will send you a link to reset your password.
                    </p>
                    {{#conf_form.errors.email}}
                        <div class="invalid-feedback">
                            {{{conf_form.errors.email}}}
                        </div>
                    {{/conf_form.errors.email}}
                    <div class="form-floating">
                        <input  id="login_email"
                                class="form-control"
                                type="email"
                                name="email"
                                placeholder="name@example.com">
                        <label for="email">Email address</label>
                    </div>
                    <button class="btn btn-primary w-100 py-2 my-2" type="submit">Send Password Reset</button>
                    <a class="btn btn-secondary w-100 py-2 my-2" href="/login">Cancel</a>
                </form>
            </div>
        </div>
    </h1>
</div>